<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GlifTheme.Light" parent="@*com.android.settings:style/SuwThemeGlif">
        <!-- For all Alert Dialogs -->
        <item name="android:alertDialogTheme">@*com.android.settings:style/ThemeOverlay.AlertDialog</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="*android:preferencePanelStyle">@*android:style/PreferencePanel.Dialog</item>
        <item name="*com.android.settings:attr/fingerprint_layout_theme">@*com.android.settings:style/FingerprintLayoutTheme</item>
        <item name="*com.android.settings:attr/ic_menu_moreoverflow">@*android:drawable/ic_menu_moreoverflow_material</item>
        <item name="*com.android.settings:attr/ic_wps">@*com.android.settings:drawable/ic_wps_light</item>
        <item name="*com.android.settings:attr/setup_divider_color">@*com.android.settings:color/setup_divider_color_dark</item>
        <item name="*com.android.settings:attr/side_margin">0dip</item>
        <item name="*com.android.settings:attr/wifi_signal_color">@*com.android.settings:color/setup_wizard_wifi_color_dark</item>
        <item name="*com.android.settings:attr/wifi_signal">@*com.android.settings:drawable/wifi_signal</item>
        <item name="*com.android.settings:attr/wifi_friction">@*com.android.settings:drawable/wifi_friction</item>
        <item name="*com.android.settings:attr/preferenceBackgroundColor">@android:color/black</item>
        <item name="*com.android.settings:attr/preferenceTheme">@*com.android.settings:style/PreferenceTheme.SetupWizard</item>

        <item name="*android:lockPatternStyle">@*com.android.settings:style/LockPatternStyle.Setup</item>
    </style>

    <style name="ThemeOverlay.AlertDialog" parent="@android:style/ThemeOverlay.Material.Dialog.Alert">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>
    <style name="ColorPickerDialogTheme" parent="@android:style/Theme.Material.Dialog">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:colorBackgroundFloating">@android:color/black</item>
    </style>
</resources>
