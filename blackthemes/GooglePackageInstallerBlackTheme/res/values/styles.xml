<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogWhenLarge" parent="@android:style/Theme.Material.DialogWhenLarge.NoActionBar">
        <item name="android:textAppearanceMedium">@android:style/TextAppearance.Medium</item>
        <item name="android:textAppearanceSmall">@android:style/TextAppearance.Small</item>
    </style>

    <style name="AlertDialogActivity" parent="@android:style/Theme.Material.Panel">
        <item name="android:colorBackgroundFloating">@android:color/black</item>
    </style>

    <style name="Header.Settings" parent="@android:style/Theme.Material" />

    <style name="Settings" parent="@android:style/Theme.Material">
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:colorPrimary">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:colorBackgroundFloating">@android:color/black</item>
    </style>

    <style name="Settings.NoActionBar" parent="@android:style/Theme.Material">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="GrantPermissions" parent="@android:style/Theme.Material.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="*android:windowFixedHeightMajor">100.0%</item>
        <item name="*android:windowFixedHeightMinor">100.0%</item>
    </style>
</resources>
