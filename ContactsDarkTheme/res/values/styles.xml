<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="BackgroundOnlyTheme" parent="@*android:style/Theme.Material">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowNoDisplay">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="PeopleTheme" parent="@android:style/Theme.Material">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:textColorSecondary">#ffffffff</item>
        <item name="android:colorPrimary">#2a56c6</item>
        <item name="android:colorPrimaryDark">#ff0d47a1</item>
        <item name="android:listViewStyle">@null</item>
        <item name="android:colorBackground">@*android:color/background_material_dark</item>
        <item name="@*com.android.contacts:attr/actionBarPopupTheme">@style/ActionBarPopupTheme</item>
    </style>

    <style name="ActionBarPopupTheme" parent="@*android:style/ThemeOverlay.Material">
        <item name="android:colorBackground">@*android:color/background_material_dark</item>
    </style>

    <style name="NonPhoneDialogTheme" parent="@*android:style/Theme.Material.Dialog" />

    <style name="ConfirmAddDetailDialogTheme" parent="@android:style/Theme.Material.Dialog.MinWidth">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:colorBackground">@*android:color/background_floating_material_dark</item>
        <item name="android:windowBackground">@*android:color/notification_default_color</item>
    </style>

    <style name="ContactEditorAccountsChangedActivityTheme" parent="@android:style/Theme.Material.Dialog.NoActionBar.MinWidth">
        <item name="android:textColorPrimary">#ffe6e6e6</item>
        <item name="android:textColorSecondary">#ffffffff</item>
        <item name="android:listViewStyle">@style/ListViewStyle</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:colorAccent">#2a56c6</item>
        <item name="android:colorBackground">@*android:color/background_floating_material_dark</item>
    </style>

    <style name="ContactsAlertDialogTheme" parent="@*android:style/Theme.Material.Dialog">
        <item name="android:colorControlActivated">#2a56c6</item>
        <item name="android:colorAccent">#2a56c6</item>
        <item name="android:background">@*android:color/background_floating_material_dark</item>
    </style>

    <style name="ContactsAlertDialogThemeAppCompat" parent="@*com.android.contacts:style/Theme.AppCompat.Dialog.MinWidth">
        <item name="android:colorControlActivated">#2a56c6</item>
        <item name="android:colorAccent">#2a56c6</item>
        <item name="android:background">@*android:color/background_floating_material_dark</item>
    </style>

    <style name="SelectableItem" parent="@*android:style/Theme.Material">
        <item name="android:background">@*android:color/background_floating_material_dark</item>
    </style>

    <style name="TextAppearanceMedium" parent="@*android:style/TextAppearance.Medium">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="TextAppearanceSmall" parent="@*android:style/TextAppearance.Small">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="ListViewStyle" parent="@android:style/Widget.Material.ListView">
        <item name="android:overScrollMode">always</item>
    </style>

    <style name="ContactListFilterTheme" parent="@*android:style/Theme.Material">
        <item name="android:colorPrimary">#2a56c6</item>
        <item name="android:colorPrimaryDark">#ff0d47a1</item>
        <item name="android:colorBackground">@*android:color/background_material_dark</item>
    </style>

    <style name="ContactsActionBarTitleText" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="EmptyStateTextStyle">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="LaunchScreenTheme">
        <item name="android:windowBackground">@null</item>
    </style>
</resources>
