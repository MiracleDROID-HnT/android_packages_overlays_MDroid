<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">
    <include
        layout="@*android:layout/time_picker_header_material"
        android:layout_width="match_parent"
        android:layout_height="@*android:dimen/timepicker_header_height"
        android:layout_gravity="center" />
    <android.widget.RadialTimePickerView
        android:id="@*android:id/radial_picker"
        android:layout_width="wrap_content"
        android:layout_height="@*android:dimen/timepicker_radial_picker_dimen"
        android:layout_gravity="center"
        android:layout_marginTop="@*android:dimen/timepicker_radial_picker_top_margin"
        android:layout_marginStart="@*android:dimen/timepicker_radial_picker_horizontal_margin"
        android:layout_marginEnd="@*android:dimen/timepicker_radial_picker_horizontal_margin" />
    <TextView
        android:visibility="gone"
        android:id="@*android:id/input_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@*android:dimen/dialog_padding_material"
        android:paddingEnd="@*android:dimen/dialog_padding_material"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:includeFontPadding="false"
        android:fontFamily="sans-serif-medium"
        android:textSize="34sp"
        android:textColor="@*android:color/white"
        android:text="@*android:string/time_picker_header_text" />
    <android.widget.TextInputTimePickerView
        android:id="@*android:id/input_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="?android:attr/dialogPreferredPadding"
        android:paddingEnd="?android:attr/dialogPreferredPadding"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@*android:id/toggle_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:tint="?android:attr/colorControlNormal"
            android:src="@*android:drawable/btn_keyboard_key_material"
            android:contentDescription="@*android:string/time_picker_text_input_mode_description" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <ViewStub
            android:id="@*android:id/buttonPanel"
            android:layout="@*android:layout/alert_dialog_button_bar_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutDirection="locale" />
    </LinearLayout>

</LinearLayout>
