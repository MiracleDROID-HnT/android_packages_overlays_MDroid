<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DisplayTextStyle" parent="@*android:style/Widget.Material.TextView">
        <item name="android:cursorVisible">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">bottom|end</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="PadButtonStyle" parent="@*android:style/Widget.Material.Button.Borderless">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@*com.android.calculator2:drawable/pad_button_background</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:minWidth">0.0dip</item>
        <item name="android:minHeight">0.0dip</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:onClick">onButtonClick</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="*com.android.calculator2:layout_gravity">fill</item>
        <item name="*com.android.calculator2:layout_rowWeight">1.0</item>
        <item name="*com.android.calculator2:layout_columnWeight">1.0</item>
    </style>

    <style name="Theme" parent="@android:style/Theme.Material">
        <item name="android:colorPrimary">@*com.android.calculator2:color/calculator_primary_color</item>
        <item name="android:colorAccent">@*com.android.calculator2:color/calculator_accent_color</item>
        <item name="android:statusBarColor">@*com.android.calculator2:color/calculator_statusbar_color</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:colorBackgroundFloating">@*android:color/background_material_dark</item>
    </style>

    <style name="HistoryPopupTheme" parent="@android:style/ThemeOverlay.Material">
        <item name="android:colorBackground">@*android:color/background_material_dark</item>
    </style>

    <style name="ThemeOverlay.Popup" parent="@*android:style/ThemeOverlay.Material">
        <item name="android:textDirection">locale</item>
    </style>
</resources>
